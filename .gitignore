# Mobility Trailblazers .gitignore
# =================================

# Debug and temporary files
/tools/
/sql/
*debug*.php
*diagnose*.php
*fix-*.php
*fix-*.sh
*fix-*.sql

# Files with credentials
*credentials*
*password*
*.env
.env.*

# Trash/temporary directories
/_trash*/
/tmp/
/temp/

# Backup files
*.backup
*.bak
*.old
*backup*.sql
*backup*.php

# Database dumps
*.sql
*.dump
*.mysql

# Log files
*.log
debug.log
error.log

# IDE and editor files
.vscode/
.idea/
*.swp
*.swo
*~
.DS_Store
Thumbs.db

# Test files
test-*.php
test-*.sh
testing/

# Session and cache files
*.session
*.cache

# WordPress specific
wp-config.php
wp-config-local.php

# Keep important documentation
!doc/*.md
!README.md
!CHANGELOG.md

# But exclude sensitive docs
doc/*fix*.sql
doc/*USERNAME_FIX_GUIDE*

# Scripts to exclude
scripts/*credentials*
scripts/*production*.sh
scripts/fix-*.sh

# Keep the main plugin files
!mobility-trailblazers.php
!includes/
!assets/
!templates/
!languages/
/scripts
